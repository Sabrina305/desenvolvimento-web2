<%-include ('../partials/head.ejs');-%>
<%-include('../partials/nav.ejs');-%>

<body>
     <hr>
    <div class="container">
       
        <h1>LISTAGEM DOS PRODUTOS DISPONÍVEIS</h1>
       
    </div>
     <hr>
    <br>
    <div class="container">
        <table class="table table-success table-hover">
        <thead>
            <tr>
                <th scope="col">Tamanho</th>
                <th scope="col">Estoque</th>
                <th scope="col">Marca</th>
                <th scope="col">Cor</th>
                <th scope="col">Preço</th>
                <th scope="col">Tipo</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <% produto.forEach(produtos => { %>
            <tbody>
                <tr>
                <td> <%= produtos.tamanho %></td>
                <td> <%= produtos.estoque %></td>
                <td> <%= produtos.marca %></td>
                <td><%= produtos.cor %></td>
                <td><%= produtos.preco %></td>
                <td><%= produtos.tipo %></td>
                <td><%=produtos.modeloId%></td>
                <td>
                    <a href="/edit/editProduto/<%= produto.id %>" class="btn btn-outline-dark" type="submit" style="color: black;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                      </svg>
                    </a>
                    
                </td>
                <td>
                    <form method="POST" action="/deleteProduto" onsubmit="confirmDelete(event,this)">
                        <input type="hidden" name="id" value="<%= modelo.id %>">
                        <button type="submit" class="btn btn-outline-dark">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </button> 
                    </form>
                    
                </td>
            </tbody>
        <% }); %>
        </table>
    </div>  
</body>
<%-include('../partials/footer.ejs');-%>
<script>
    function confirmDelete(event, form){
         event.preventDefault();
         var confirmar = confirm("Deseja mesmo apagar esse registro?");
         if(confirmar){
            form.submit();
         }
    }
</script>
</html>